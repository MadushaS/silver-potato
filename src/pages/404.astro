---
import AboutHero from "../components/AboutHero.astro"
import Container from "../components/Container.astro"
import History from "../components/History.astro"
import TerminalWindow from "../components/TerminalWindow.astro"
import Layout from "../layouts/Layout.astro"

const title = "Page not found | FOSSUOK";
const description = "We are sorry, but the page you requested was not found";
const OGImage = "/images/thumbnail.jpg";
---

<Layout title={title} description={description} OGImage={OGImage} >
        <Container>
            <div class="container">
                <div class="relative pt-16">
                    <div class="col-sm-8 offset-sm-2 text-gray-900 dark:text-gray-50 text-center mt-52">
                        <div class="relative ">
                        <h1 class="relative text-9xl tracking-tighter-less text-shadow font-sans font-bold">
                            <span>4</span><span>0</span><span>4</span></h1>
                            <span class="absolute top-0 -ml-12 dark:text-gray-300 text-gray-700 font-semibold">Oops!</span>
                            </div>
                        <h5 class="dark:text-gray-300 text-gray-700 font-semibold -mr-10 -mt-3">Page not found</h5>
                        <p class="dark:text-gray-100 text-gray-800 mt-2 mb-6">we are sorry, but the page you requested was not found</p>
                        <a href="/"
                            class="bg-primary px-5 py-3 text-sm shadow-sm font-medium tracking-wider text-gray-50 rounded-full hover:shadow-lg">
                            Got to Home
                        </a>
                    </div>
                </div>
            </div>
        </Container>
</Layout>