---
import { Image } from "astro:assets"

const features = [
  {
    title: "Master the Craft",
    description: "Sharpen your coding skills and problem-solving prowess with expert-led workshops tailored to your level.",
    icon: "https://img.icons8.com/stickers/100/programming-flag.png"
  },
  {
    title: "Industry Ready",
    description: "Gear up for the professional world with workshops focusing on in-demand industry skills.",
    icon: "https://img.icons8.com/stickers/100/cloud-business.png"
  },
  {
    title: "Network Like a Pro",
    description: "Connect with like-minded individuals, seasoned devs, and potential mentors.",
    icon: "https://img.icons8.com/stickers/100/connected-people.png"
  },
  {
    title: "Learn & Earn",
    description: "Showcase your dedication and achievements with our unique digital badges.",
    icon: "https://img.icons8.com/stickers/100/guarantee.png"
  }
]

---

<div class="relative" id="what-we-do">
  <div class="max-w-7xl mx-auto px-6 md:px-12 xl:px-6">
    <div class="mx-auto max-w-full px-4 py-4 sm:px-6 lg:me-0 lg:py-8 lg:pe-0 xl:py-8">
      <div class="mb-2 space-y-2 text-center">
        <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">Level Up Your Coding Game with FOSSUOK</h2>
      </div>
    </div>
    <div
      class="mt-16 grid dark:text-gray-200 text-gray-800 dark:divide-gray-700 divide-gray-100 overflow-hidden rounded-3xl border dark:border-gray-700 border-gray-100 sm:grid-cols-2 lg:grid-cols-4 lg:divide-y-0 xl:grid-cols-4 dark:bg-gray-800 bg-gray-100 bg-grid bg-repeat mask-gradient bg-blend-color-dodge">
      
      { features.map(({ title, description, icon }) => (
        <div class="group relative transition hover:z-[1] hover:shadow-2xl hover:shadow-gray-600/10">
          <div class="relative space-y-8 py-12 p-6">
            <div class="space-y-2">
              <Image src={icon} alt={title} class="w-16 h-16 mx-auto" width={64} height={64} loading="eager"/>
              <h5 class="text-xl bg-clip-content font-semibold dark:text-gray-100 text-gray-900 transition group-hover:text-secondary">
                {title}
              </h5>
              <p class="text-gray-800 dark:text-gray-200 text-justify">
                {description}
              </p>
            </div>
          </div>
        </div>
      ))
      }
            
    </div>
  </div>
</div>